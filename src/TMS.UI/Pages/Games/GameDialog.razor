@inherits GameDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Add Game</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <EditForm Model="@Game" OnValidSubmit="@HandleValidSubmit">
                        <ObjectGraphDataAnnotationsValidator />

                        @if (ShowApiMessage)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ApiMessage
                            </div>
                        }
                        
                        <div class="form-group">
                            <label for="home_name">Home: </label>
                            <InputText id="home_name" class="form-control" @bind-Value="@Game.Home.Name"></InputText>
                            <ValidationMessage For="@(() => Game.Home.Name)" />
                        </div>
                        
                        <div class="form-group">
                            <label for="home_score">Score: </label>
                            <InputNumber id="home_score" class="form-control" @bind-Value="@Game.Home.Score"></InputNumber>
                            <ValidationMessage For="@(() => Game.Home.Score)" />
                        </div>
                        
                        <div class="form-group">
                            <label for="guest_name">Guest: </label>
                            <InputText id="guest_name" class="form-control" @bind-Value="@Game.Guest.Name"></InputText>
                            <ValidationMessage For="@(() => Game.Guest.Name)" />
                        </div>
                        
                        <div class="form-group">
                            <label for="guest_score">Score: </label>
                            <InputNumber id="guest_score" class="form-control" @bind-Value="@Game.Guest.Score"></InputNumber>
                            <ValidationMessage For="@(() => Game.Guest.Score)" />
                        </div>
                        
                        <div class="form-group">
                            <label for="place">Place: </label>
                            <input type="text" class="form-control" value="@Game.Place" @onchange="PlaceChanged"/>
                            <ValidationMessage For="@(() => Game.Place)" />
                        </div>
                        
                        <div class="form-group">
                            <label for="date">Date: </label>
                            <InputDate id="date" class="form-control" @bind-Value="@Game.Date"></InputDate>
                            <ValidationMessage For="@(() => Game.Date)" />
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Save game</button>
                        <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}